<div id="<%= dom_id inbox %>" class="inbox">
  <h3>
  <%= link_to inbox.name, inbox %>
  </h3>
  
  <%= link_to "Edit", edit_inbox_path(inbox) %> 

  <%= button_to "Destroy", inbox_path(inbox), method: :delete %>

  Messages:
  <%= inbox.messages_count%>
  <i>
    by
    <%= inbox.user.email %>
    on
    <%= inbox.created_at.strftime('%d/%b/%Y') %>
  </i>
</div>
